# ===================================
# ILLEGAL STREET BACKEND - ENVIRONMENT VARIABLES
# ===================================

# ===================================
# APPLICATION SETTINGS
# ===================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
APP_NAME=Illegal-Street-Backend
APP_URL=http://localhost:5000

# ===================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/illegal_street?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=illegal_street
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379
REDIS_TLS=false

# ===================================
# JWT & AUTHENTICATION
# ===================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=illegal-street
JWT_AUDIENCE=illegal-street-users

# JWT Rotation
JWT_ROTATION_ENABLED=true
JWT_ROTATION_INTERVAL=30d

# ===================================
# SECURITY SETTINGS
# ===================================
# Bcrypt rounds (10-12 for production)
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars
SESSION_MAX_AGE=86400000

# Cookie Settings
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# ===================================
# END-TO-END ENCRYPTION
# ===================================
E2E_ENCRYPTION_ENABLED=true
E2E_PUBLIC_KEY=
E2E_PRIVATE_KEY=

# ===================================
# AWS S3 CONFIGURATION
# ===================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=illegal-street-uploads
AWS_S3_ENDPOINT=
S3_MAX_FILE_SIZE=10485760
S3_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===================================
# EMAIL CONFIGURATION (SMTP)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@illegal-street.com
SMTP_FROM_NAME=Illegal Street

# Email Templates
EMAIL_VERIFICATION_ENABLED=true
EMAIL_WELCOME_ENABLED=true

# ===================================
# SENTRY ERROR TRACKING
# ===================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENABLED=false

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# ===================================
# WEBSOCKET CONFIGURATION
# ===================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# ===================================
# BULL QUEUE CONFIGURATION
# ===================================
QUEUE_ENABLED=true
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# Queue Settings
EMAIL_QUEUE_ENABLED=true
NOTIFICATION_QUEUE_ENABLED=true
FILE_PROCESSING_QUEUE_ENABLED=true

# Job Attempts & Delays
JOB_ATTEMPTS=3
JOB_BACKOFF_TYPE=exponential
JOB_BACKOFF_DELAY=1000

# ===================================
# CACHE CONFIGURATION
# ===================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=illegal-street:

# ===================================
# FILE UPLOAD SETTINGS
# ===================================
UPLOAD_DIR=uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===================================
# API THROTTLING & LIMITS
# ===================================
API_RATE_LIMIT_ENABLED=true
API_MAX_REQUESTS_PER_MINUTE=60
API_MAX_REQUESTS_PER_HOUR=1000

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_USER_REGISTRATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_OAUTH=false
FEATURE_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true

# ===================================
# MONITORING & HEALTH
# ===================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=false
METRICS_PATH=/metrics

# ===================================
# TESTING
# ===================================
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/illegal_street_test?schema=public"
TEST_REDIS_URL=redis://localhost:6379/1

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
DEV_SEED_DATABASE=false
DEV_AUTO_MIGRATE=false
DEV_MOCK_EMAIL=true
DEV_MOCK_S3=true

# ===================================
# PRODUCTION SETTINGS
# ===================================
# Set these in production environment
# PROD_SSL_CERT_PATH=/path/to/cert.pem
# PROD_SSL_KEY_PATH=/path/to/key.pem
# PROD_CLUSTER_ENABLED=true
# PROD_WORKERS=4
